---
import dotHome from '../assets/dot.png'

interface NavbarItem {
	title: string;
	url: string;
}

interface Props {
	items: NavbarItem[]
}

const { items } = Astro.props;
---

<div class="flex justify-between h-16 w-full bg-black px-6">
  <a href="/">
    <img class="h-full" src="./logo-mantis-servicios.jpg" alt="">
  </a>
  <div class="flex justify-center items-center text-lg text-center space-x-7">
    {items.map((item: NavbarItem, index: number) => 
      <div class="flex items-center space-x-7">
        {index > 0 && <img class="mt-1" src={dotHome.src} alt="">}
        <li class="list-none text-white"><a href={item.url}>{item.title}</a></li>  
      </div>
    )}
  </div>
  <div class="w-[160px]"></div>
</div>
